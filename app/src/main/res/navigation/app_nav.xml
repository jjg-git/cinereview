<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav.xml"
    app:startDestination="@id/mainFrag">

    <fragment
        android:id="@+id/mainFrag"
        android:name="com.mobdeve.s15.gironasayasranario.cinereview.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_movieDetailFragment2"
            app:destination="@id/movieDetailFrag" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFrag"
        android:name="com.mobdeve.s15.gironasayasranario.cinereview.fragments.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="cast"
            app:argType="string" />
        <argument
            android:name="director"
            app:argType="string" />
        <argument
            android:name="rating"
            app:argType="string" />
    </fragment>
</navigation>